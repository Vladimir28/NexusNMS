<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainBorder" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.vltes.nexusnms.controller.NewDeviceDialogController">
  <center>
    <StackPane alignment="TOP_CENTER">
      <padding>
        <Insets bottom="10" left="20" right="20" top="30" />
      </padding>
    <VBox fx:id="mainBox" alignment="CENTER" fillWidth="false" spacing="5">
      <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Введите список ip-адресов через Enter:" />
      <TextArea fx:id="textAreaDevise" minHeight="200.0" prefHeight="300.0" prefWidth="290.0" />
    </VBox>
    </StackPane>
  </center>
  <bottom>
    <VBox alignment="CENTER">
      <padding>
        <Insets bottom="40" />
      </padding>
    <HBox alignment="CENTER" spacing="20">
      <Button fx:id="closeButton" onAction="#onCancel" prefWidth="100" text="Отмена" />
      <Button onAction="#onAddDevice" prefWidth="100" text="Добавить" />
    </HBox>
    </VBox>
  </bottom>
</BorderPane>
