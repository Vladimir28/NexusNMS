<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" prefHeight="250.0" prefWidth="400.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.vltes.nexusnms.controller.LoginController">

    <Label text="Введите логин и пароль:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Логин:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="loginField" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Пароль:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox alignment="CENTER" spacing="20">
        <Button text="Отмена" fx:id="closeButton" onAction="#onCancel" prefWidth="100"/>
        <Button text="Принять" onAction="#onAddUser" prefWidth="100"/>
    </HBox>
</VBox>
